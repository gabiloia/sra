    <title>Bootstrap 101 Template</title>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>


<h1>Nuevo Cliente</h1>
<%= form_for(@clientes) do |f| %>
  <div>
    <p>
    <%= f.label :nombre %><br>
    <%= f.text_field(:nombre) %>
    </p>

    <p>
    <%= f.label :cuit %><br>
    <%= f.text_field(:cuit) %>
    </p>

    <p>
    <%= f.label :direccion %><br>
    <%= f.text_field(:direccion) %>
    </p>

    <p>
    <%= f.label :localidad %><br>
    <%= f.text_field(:localidad) %>
    </p>

    <p>
    <%= f.label :provincia %><br>
    <%= f.text_field(:provincia) %>
    </p>

    <p>
    <%= f.label :codigo_postal %><br>
    <%= f.text_field(:codigo_postal) %>
    </p>
    
    <p>
    <%= f.label :limite_credito %><br>
    <%= f.number_field(:limite_credito) %>
    </p>

    <p>
    <%= f.label :telefono %><br>
    <%= f.telephone_field(:telefono) %>
    </p>

    <p>
    <%= f.label :celular %><br>
    <%= f.telephone_field(:celular) %>
    </p>

    <p>
    <%= f.label :email %><br>
    <%= f.email_field(:email) %>
    </p>

  </div>
  <div>
    <%= f.submit "Guardar" %>
  </div>
<% end %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>
