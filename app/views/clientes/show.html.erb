  <body>


<h2><%= @cliente.nombre %></h2>
<p>cliente.cuit <%= @cliente.cuit %></p>
<p>cliente.direccion <%= @cliente.direccion %></p>
<p>cliente.localidad <%= @cliente.localidad %></p>
<p>cliente.provincia <%= @cliente.provincia %></p>
<p>cliente.codigo_postal <%= @cliente.codigo_postal %></p>
<p>cliente.limite_credito <%= @cliente.limite_credito %></p>
<p>cliente.telefono <%= @cliente.telefono %></p>
<p>cliente.celular <%= @cliente.celular %></p>
<p>cliente.email <%= @cliente.email %></p>

   <% @maquinas.each do |m| %>
      <div class="card col-xs-4">
	<p>numeroserie: <%= m.num_serie %></p>
	<%= link_to "Detalles", maquina_path(m) %>
      </div>
   <% end %>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  </body>
</html>

